this is the structure >> lib/
│
├── main.dart   done           # App entry point
│
├── theme/                 # Colors, typography, dark/light theme
│   └── app_theme.dart
│
├── constants/             # App constants
│   └── app_strings.dart
│   └── app_icons.dart
│
├── services/              # Firebase / API services
│   └── auth_service.dart
│   └── ads_service.dart
│   └── user_service.dart
│   └── notification_service.dart
│
├── models/                # Data models
│   └── user_model.dart
│   └── ad_model.dart
│
├── providers/             # State management (Provider/ Riverpod / Bloc)
│   └── auth_provider.dart
│   └── ads_provider.dart
│   └── theme_provider.dart
│
├── screens/               # All UI Screens
│   ├── landing/
│   │   └── landing_screen.dart done
│   ├── know_more/
│   │   └── know_more_screen.dart done
│   ├── dashboard/ 
│   │   └── dashboard_screen.dart done
│   ├── ads/
│   │   ├── ads_feed_screen.dart 
│   │   ├── ad_detail_screen.dart 
│   │   └── add_submit_screen.dart done
│   ├── saved/
│   │   └── saved_screen.dart
│   ├── settings/
│   │   ├── settings_screen.dart
│   │   ├── profile_screen.dart
│   │   ├── sign_in_screen.dart
│   │   ├── sign_up_screen.dart
│   │   └── guest_screen.dart
│
├── widgets/               # Reusable UI widgets
│   ├── ad_card.dart
│   ├── search_bar.dart done
│   ├── category_chips.dart
│   ├── custom_button.dart
│   └── input_field.dart
│
└── utils/                 # Helper functions
    ├── validators.dart
    ├── formatters.dart
    └── navigation.dart



